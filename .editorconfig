# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

# Unix-style newlines with a newline ending every file
[*.yml]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8

# Unix-style newlines with a newline ending every file
[*.yaml]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_style = tab

[*.ts]
indent_style = tab

[*.js]
indent_style = tab
