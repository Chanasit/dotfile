{
  "coc.preferences.formatOnSaveFiletypes": ["ts", "go"],
  "diagnostic.checkCurrentLine": true,
  "suggest.timeout": 5000,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "terraform": {
      "command": "terraform-ls",
			"args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    },
    "swift": {
      "command": "xcrun",
      "args": ["sourcekit-lsp"],
      "filetypes": ["swift", "c", "cpp"],
      "initializationOptions": {},
      "settings": {},
      "rootPatterns": ["Cross.toml"],
      "requireRootPattern": true
    }
  }
}
